<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- App Banner -->
        <TextView
            android:id="@+id/tv_app_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EmpowerHer"
            android:textColor="#3F51B5"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:gravity="center" />

        <!-- Informative Text -->
        <TextView
            android:id="@+id/tv_informative_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join EmpowerHer to unlock opportunities for skill development, collaboration, and income generation."
            android:textColor="#757575"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <!-- Full Name Input -->
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:elevation="2dp"/>

        <!-- Email Input -->
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:elevation="2dp"/>

        <!-- Password Input -->
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:elevation="2dp"/>

        <!-- Confirm Password Input -->
        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:elevation="2dp"/>

        <!-- Phone Number Input -->
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="phone"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:elevation="2dp"/>

        <!-- Address Input -->
        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"/>

        <!-- Location Button -->
        <Button
            android:id="@+id/btn_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Location from Map"
            android:background="#FF5722"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"/>

        <!-- Register Button -->
        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:background="#3F51B5"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:elevation="4dp"/>

        <!-- Login Text -->
        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? Login"
            android:textColor="#3F51B5"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textSize="14sp"/>
    </LinearLayout>
</ScrollView>
